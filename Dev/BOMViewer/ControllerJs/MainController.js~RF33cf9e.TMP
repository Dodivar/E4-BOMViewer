                e.itemElement.css('color', e.itemData.TypeLine === 'C' ? $scope.colorValue.Commande : e.itemData.TypeLine === 'A' ? $scope.colorValue.Ligne : 'red')
            },
            onItemClick: function (e) {
                e.itemElement.ss('color', 'yellow')
            }
        };


    }), function (response) {
        console.log(response);
        alert(reponse);
    };
   
}



