
<div ng-controller="customViewField" ng-init="init()">


    <div id="lookups_Field" style="width:100%;">
        <div class="dx-fieldset" style="width:40%;">
            <div class="dx-fieldset-header">Table :</div>
            <div class="dx-field">
                <div dx-lookup="lookupOptionsTable"></div>
            </div>
        </div>

        <div class="dx-fieldset" style="width:40%; margin-left:50%; margin-top:-120px;">
            <div class="dx-fieldset-header">Ligne :</div>
            <div class="dx-field">
                <div dx-lookup="lookupOptionsLine"></div>
            </div>
        </div>
    </div>



    <div id="listeZone_Field" ng-show="toDisplay" style="width:100%;">
        <div class="widget-container" style="width:45%; float:left;">
            <h4 style="color:red;">Zone d'arborescence :</h4>
            <div dx-list="listOptionsPrincipale" dx-item-alias="line">
                <div data-options="dxTemplate: {name: 'item'}">
                    <div class="line">
                        <div><span style="font-weight:700;">{{line.ColumnName}}</span> ({{line.ColumnDesc}})</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="widget-container" style="width:45%; margin-left:50%;">
            <h4 style="color:red;">Zone détail :</h4>
            <div dx-list="listOptionsSecondaire" dx-item-alias="line">
                <div data-options="dxTemplate: {name: 'item'}">
                    <div class="line">
                        <div><span style="font-weight:700;">{{line.ColumnName}}</span> ({{line.ColumnDesc}})</div>
                    </div>
                </div>
            </div>
        </div>        
    </div>

</div>