/* ----- ZONE DETAIL Style ----- */
/* ----- BEGIN ----- */
#zone-detail {
    position: fixed;
    right: 0;
    top: 0;
    width: 500px;
    max-width: 500px;
    min-width: 300px;
    height: 100%;
    background-color: white;
    padding: 5px 0px 5px 5px;
    margin: 0px 0 0 0;
    border-left: 2px solid black;
    border-bottom: 0px;
    border-top: 0px;
    border-right: 0px;
}

#zone-detail-text {
    color:black;
}

#font-size {
    position: fixed;
    margin: 10px 10px 10px 10px;
    bottom: 0;
    right: 0;
}

.btnFontSize {
    background-color: white;
    width: 30px;
    height: 30px;
}

#btnCloseDetail {
    right: 100px;
}


/* ----- TOOL TIP Style ----- */
#toolTipText {
    text-align:left;
}
/* ----- Chart on home page Style ----- */
#pie-chart-top-order {
    width: 50%;
}





/* ----- Accordion Style ----- */
/* ----- BEGIN ----- */
#accordion h1 {
    font-size: 20px;
}

.dx-theme-material #accordion .dx-accordion-item-opened h1 {
    margin-top: 7px;
}

.options,
.selected-data {
    padding: 20px;
    background-color: rgba(191, 191, 191, 0.15);
    margin-top: 20px;
}

.selected-data {
    position: relative;
    height: 36px;
}

    .selected-data > .caption {
        position: relative;
        top: 5px;
        margin-right: 10px;
        font-weight: bold;
        font-size: 115%;
    }

    .selected-data > .dx-widget {
        position: absolute;
        left: 140px;
        right: 20px;
        top: 20px;
    }

.options > .caption {
    font-weight: 500;
    font-size: 18px;
}

.option {
    margin-top: 10px;
}
/* ----- END ----- */
/* ----- Accordion Style ----- */


.title h1 {
    -webkit-animation: title 0.5s forwards 0s ease-out; /* Safari 4+ */
    -moz-animation: title 0.5s forwards 0s ease-out; /* Fx 5+ */
    -o-animation: title 0.5s forwards 0s ease-out; /* Opera 5+ */
    animation: title 0.5s forwards 0s ease-out; /*IE 10+, Fx 29 */
}

.title h3 {
    -webkit-animation: title 0.5s forwards 0.3s ease-out; /* Safari 4+ */
    -moz-animation: title 0.5s forwards 0.3s ease-out; /* Fx 5+ */
    -o-animation: title 0.5s forwards 0.3s ease-out; /* Opera 5+ */
    animation: title 0.5s forwards 0.3s ease-out; /*IE 10+, Fx 29 */

    color: darkgrey;
}

@keyframes title {
    0% {
        transform: translateY(25px);
        opacity: 0;
    }

    100% {
        transform: translateY(0px);
        opacity: 1;
    }
}